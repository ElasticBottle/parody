{
  "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
  "organizeImports": { "enabled": true },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": {
        "useSortedClasses": "warn"
      }
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git"
  },
  "javascript": { "globals": [] },
  "json": {
    "parser": {
      "allowComments": true,
      "allowTrailingCommas": true
    }
  },
  "overrides": [
    {
      "include": ["**/*.js", "**/*.ts", "**/*.tsx"],
      "linter": {
        "rules": {
          "complexity": {},
          "correctness": {
            "noUnusedImports": "warn",
            "noUnusedVariables": "warn",
            "noUnusedPrivateClassMembers": "error"
          },
          "style": {
            "useConsistentArrayType": {
              "level": "error",
              "options": {
                "syntax": "generic"
              }
            },
            "noNamespace": "error",
            "useForOf": "error"
          },
          "suspicious": {
            "noEmptyBlockStatements": "error",
            "useAwait": "error"
          }
        }
      }
    }
  ],
  "files": {
    "ignore": ["node_modules", ".turbo", ".cache", "dist", "routeTree.gen.ts"]
  }
}
