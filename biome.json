{
  "$schema": "https://biomejs.dev/schemas/1.9.2/schema.json",
  "organizeImports": { "enabled": true },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": {
        "noEnum": "warn",
        "noDuplicateElseIf": "error",
        "noDynamicNamespaceImportAccess": "error",
        "noExportedImports": "error",
        "noMissingVarFunction": "error",
        "useSortedClasses": {
          "level": "error",
          "options": {
            "attributes": [],
            "functions": ["clsx", "cva", "tw"]
          }
        }
      },
      "correctness": {
        "useHookAtTopLevel": "error",
        "noNewSymbol": "error",
        "useArrayLiterals": "error"
      }
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git"
  },
  "javascript": { "globals": [] },
  "json": {
    "parser": {
      "allowComments": true,
      "allowTrailingCommas": true
    }
  },
  "overrides": [
    {
      "include": ["**/*.js", "**/*.ts", "**/*.tsx"],
      "linter": {
        "rules": {
          "complexity": {},
          "correctness": {
            "noUnusedImports": "warn",
            "noUnusedVariables": "warn",
            "noUnusedPrivateClassMembers": "error"
          },
          "style": {
            "useConsistentArrayType": {
              "level": "error",
              "options": {
                "syntax": "generic"
              }
            },
            "noNamespace": "error",
            "useForOf": "error"
          },
          "suspicious": {
            "noEmptyBlockStatements": "error",
            "useAwait": "error"
          }
        }
      }
    }
  ],
  "files": {
    "ignore": [
      "node_modules",
      ".sst",
      ".turbo",
      ".cache",
      "dist",
      "routeTree.gen.ts",
      "sst-env.d.ts"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  }
}
