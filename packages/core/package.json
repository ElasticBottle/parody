{
  "name": "@parody/core",
  "private": true,
  "type": "module",
  "exports": {
    "./error/*": {
      "types": "./dist/error/*.d.ts",
      "default": "./src/error/*.ts"
    },
    "./image/*": {
      "types": "./dist/image/*.d.ts",
      "default": "./src/image/*.ts"
    },
    "./schema/*": {
      "types": "./dist/schema/*.d.ts",
      "default": "./src/schema/*.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc",
    "clean": "rm -rf .turbo node_modules .cache",
    "format": "bunx @biomejs/biome format .",
    "lint": "bunx @biomejs/biome lint .",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "react": "^18.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.5.2"
  }
}
